<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/api_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/api_nested_margins"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/card_elevation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/api_nested_margins"
            android:layout_marginRight="@dimen/api_nested_margins"
            android:layout_marginTop="4dp"
            android:text="@string/display_settings"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:id="@+id/api_pair_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_field_height"
            android:orientation="vertical">

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/api_nested_margins"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="@dimen/card_elevation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/api_nested_margins"
            android:layout_marginRight="@dimen/api_nested_margins"
            android:layout_marginTop="4dp"
            android:text="API Credentials"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_color"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/api_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/api_nested_margins"
                android:layout_marginRight="@dimen/api_nested_margins"
                android:layout_marginTop="@dimen/api_nested_margins"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/api_user_name_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size" />

                <EditText
                    android:id="@+id/api_username_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="User Name For API Key"
                    android:inputType="text"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/api_key_text"
                    android:text=""
                    android:textSize="@dimen/dialog_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/api_key_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/api_nested_margins"
                android:layout_marginRight="@dimen/api_nested_margins"
                android:layout_marginTop="@dimen/api_nested_margins"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="API Key"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size" />

                <EditText
                    android:id="@+id/api_key_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="API Key From Website"
                    android:inputType="text|textNoSuggestions|textVisiblePassword"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/api_secret_text"
                    android:text=""
                    android:textSize="@dimen/dialog_text_size" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/api_secret_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/api_nested_margins"
                android:layout_marginRight="@dimen/api_nested_margins"
                android:layout_marginTop="@dimen/api_nested_margins"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="API Secret"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size" />

                <EditText
                    android:id="@+id/api_secret_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="API Secret From Website"
                    android:inputType="text|textNoSuggestions|textVisiblePassword"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/api_password_text"
                    android:text=""
                    android:textSize="@dimen/dialog_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/api_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/api_nested_margins"
                android:layout_marginRight="@dimen/api_nested_margins"
                android:layout_marginTop="@dimen/api_nested_margins"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="API Password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size" />

                <EditText
                    android:id="@+id/api_password_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="API Password From Website"
                    android:inputType="text|textNoSuggestions|textVisiblePassword"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="@dimen/dialog_text_size" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_margin" />


</LinearLayout>