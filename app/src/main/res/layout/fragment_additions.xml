<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:elevation="0dp"
        app:tabIndicatorHeight="5dp"
        app:tabSelectedTextColor="#ffffff"
        app:tabTextColor="#ffffff">

        <android.support.design.widget.TabItem
            android:id="@+id/tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API" />

        <android.support.design.widget.TabItem
            android:id="@+id/tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Address" />
    </android.support.design.widget.TabLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save_button"
        android:layout_below="@id/tab_layout"
        android:paddingLeft="@dimen/default_margin"
        android:paddingRight="@dimen/default_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/spinner_exchange_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/api_nested_margins"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spinner_exchange_header_text"
                    style="@style/width_half_weight"
                    android:gravity="center_vertical"
                    android:text="@string/dialog_exchange"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size" />

                <Spinner
                    android:id="@+id/spinner_exchange"
                    style="@style/width_half_weight" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/spinner_crypto_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cryptocurrency"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialog_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/api_nested_margins"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/width_half_weight"
                        android:gravity="center_vertical"
                        android:text="@string/dialog_crypto_pair"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dialog_text_size" />

                    <Spinner
                        android:id="@+id/spinner_crypto"
                        style="@style/width_half_weight" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/fragment_addition_coins" />

            <include layout="@layout/fragment_additions_api" />

            <include layout="@layout/fragment_additions_watch" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background"
        tools:text="Add Coins"
        android:textColor="#ffffff" />

</RelativeLayout>