<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nebulights.crytpotracker.CryptoListFragment">

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop" />

    <TextView
        android:id="@+id/btc_cad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTC_CAD" />

    <TextView
        android:id="@+id/bch_cad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BCH_CAD"

        />

    <TextView
        android:id="@+id/eth_cad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ETH_CAD"

        />

    <TextView
        android:id="@+id/net_worth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Net Worth"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
