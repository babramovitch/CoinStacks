<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/watch_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/api_nested_margins"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/coins_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/api_nested_margins"
            android:layout_marginRight="@dimen/api_nested_margins"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_color"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_half"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Nick Name"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_text_size" />

            <EditText
                android:id="@+id/watch_nickname_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Cold Storage"
                android:inputType="text"
                android:textSize="@dimen/dialog_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Public Address"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_text_size" />

            <EditText
                android:id="@+id/watch_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Address"
                android:inputType="text"
                android:textSize="@dimen/dialog_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:gravity="center_vertical"
                android:text="To obtain balance information, this public address will be transmitted to block explorer"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_text_size" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>